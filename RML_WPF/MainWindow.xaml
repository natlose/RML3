<Window x:Class="RML_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RML_WPF"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" >
    <StackPanel>
        <Label Content="Címek" />
        <TextBox />
        <Label Content="Vezetéknév" />
        <TextBox />
        <Label Content="Keresztnév" />
        <TextBox />
        <Label Content="Telefon" />
        <TextBox />
        <Label Content="Mobil" />
        <TextBox />
        <Label Content="Email" />
        <TextBox />
        <DockPanel LastChildFill="False">
            <Button Content="Előző" DockPanel.Dock="Left" />
            <Button Content="Következő" DockPanel.Dock="Left" />
            <Button x:Name="Cancel" Content="Kilép" DockPanel.Dock="Right" Click="Cancel_Click" />
        </DockPanel>
    </StackPanel>
</Window>
